<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:visibility="visible"
              android:padding="16dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:id="@+id/LRButtonLayout"
        android:focusable="false"
        android:visibility="visible">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Left"
            android:id="@+id/leftButton"
            android:layout_weight="1"
            android:background="@color/color_left_blue"
            android:textSize="20dp"
            android:padding="2dp"
            android:layout_margin="4dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Right"
            android:id="@+id/rightButton"
            android:layout_weight="1"
            android:background="@color/color_right_red"
            android:textSize="20dp"
            android:padding="2dp"
            android:layout_margin="4dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:id="@+id/GaugeLayout">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/leftProgressBar"
            android:layout_weight="1"
            android:max="100"
            android:progress="50"
            android:indeterminate="false"
            android:visibility="visible"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:padding="0dp"
            android:progressDrawable="@drawable/progress_bar_color_left"
            android:background="@color/color_light_gray"
            android:layout_margin="4dp"/>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/rightProgressBar"
            android:layout_weight="1"
            android:max="100"
            android:progress="50"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:padding="0dp"
            android:progressDrawable="@drawable/progress_bar_color_right"
            android:background="@color/color_light_gray"
            android:layout_margin="4dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="75"
        android:id="@+id/LogLayout"
        >

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/logListView"
            android:layout_gravity="center_horizontal"
            android:layout_weight="3"
            android:visibility="visible"/>

    </LinearLayout>

</LinearLayout>