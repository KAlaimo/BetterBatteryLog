<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:id="@+id/LRButtonLayout"
        android:focusable="false"
        android:visibility="visible">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="@string/new_left"
            android:drawableLeft="@android:drawable/ic_menu_add"
            android:id="@+id/leftBigButton"
            android:layout_weight="1"
            android:background="@drawable/custom_button_blue"

            android:enabled="true"
            android:gravity="center_vertical"

            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="@string/new_right"
            android:drawableLeft="@android:drawable/ic_menu_add"
            android:id="@+id/rightBigButton"
            android:layout_weight="1"
            android:background="@drawable/custom_button_red"

            android:enabled="true"
            android:gravity="center_vertical"

            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:id="@+id/GaugeLayout">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/leftProgressBar"
            android:layout_weight="1"
            android:max="100"
            android:progress="20"
            android:indeterminate="false"
            android:visibility="visible"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:padding="0dp"
            android:progressDrawable="@drawable/progress_bar_color_left"
            android:background="@drawable/progress_background"
            android:layout_margin="4dp"/>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/rightProgressBar"
            android:layout_weight="1"
            android:max="100"
            android:progress="50"
            android:indeterminate="false"
            android:visibility="visible"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:padding="0dp"
            android:progressDrawable="@drawable/progress_bar_color_right"
            android:background="@drawable/progress_background"
            android:layout_margin="4dp"/>
    </LinearLayout>

</LinearLayout>