<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:id="@+id/LRButtonLayout"
        android:focusable="false"
        android:visibility="visible">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="@string/left"
            android:id="@+id/leftBigButton"
            android:layout_weight="1"
            android:background="@color/color_left_blue"
            android:textSize="20dp"
            android:padding="2dp"
            android:layout_margin="4dp"
            android:textColor="@android:color/black"
            android:enabled="true"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="@string/right"
            android:id="@+id/rightBigButton"
            android:layout_weight="1"
            android:background="@color/color_right_red"
            android:textSize="20dp"
            android:padding="2dp"
            android:layout_margin="4dp"
            android:textColor="@android:color/black"
            android:enabled="true"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:id="@+id/GaugeLayout">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/leftProgressBar"
            android:layout_weight="1"
            android:max="100"
            android:progress="20"
            android:indeterminate="false"
            android:visibility="visible"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:padding="0dp"
            android:progressDrawable="@drawable/progress_bar_color_left"
            android:background="@drawable/progress_background"
            android:layout_margin="4dp"/>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/rightProgressBar"
            android:layout_weight="1"
            android:max="100"
            android:progress="50"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:padding="0dp"
            android:progressDrawable="@drawable/progress_bar_color_right"
            android:background="@drawable/progress_background"
            android:layout_margin="4dp"/>
    </LinearLayout>

</LinearLayout>